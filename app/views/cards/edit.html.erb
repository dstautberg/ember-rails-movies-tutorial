
<%= form_for(@card, html: {class: "form-horizontal"}) do |f| %>
  <h1>Card details</h1>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <div class="checkbox">
        <label class="control-label">
          <%= f.check_box :done %>
          Done
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Title:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @card.id %> - <%= @card.title %></p>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Description:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @card.description %></p>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Difficulty:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @card.difficulty %></p>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Comments:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @card.comments %></p>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Clue #1:</label>
    <div class="col-sm-10">
      <button class="btn btn-primary btn-xs js-btn-clue1" style="margin-top: 8px;">Reveal</button>
      <p class="form-control-static js-clue1" style="display: none;"><%= @card.clue1 %></p>
    </div>
  </div>
  <div class="row">
    <label class="col-sm-2 control-label">Clue #2:</label>
    <div class="col-sm-10">
      <button class="btn btn-warning btn-xs js-btn-clue2" style="margin-top: 8px;">Reveal</button>
      <p class="form-control-static js-clue2" style="display: none;"><%= @card.clue2 %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Clue #3:</label>
    <div class="col-sm-10">
      <button class="btn btn-danger btn-xs js-btn-clue3" style="margin-top: 8px;">Reveal</button>
      <p class="form-control-static js-clue3" style="display: none;"><%= @card.clue3 %></p>
    </div>
  </div>
  <div class="actions" style="text-align: center;">
    <%= f.submit "Save", class: "btn btn-success" %>
    <%= link_to 'Back', cards_path, class: "btn btn-default" %>
  </div>
<% end %>


<script language="javascript">
  $("[class*=js-btn-clue]").on("click", function(e) {
    e.preventDefault();
    var that = $(e.target)
    that.hide();
    that.next($("[class*=js-clue]")).toggle("highlight");
  });
</script>
