<button {{action "edit"}} class="btn btn-primary">Edit</button>
<h2>{{name}}</h2>
<div class="row">
  <div class="col-md-1">Gender:</div><div class="col-md-11">{{gender}}</div>
</div>
<div class="row">
  <div class="col-md-1">Bio:</div><div class="col-md-11">{{bio}}</div>
</div>
<div class="row">
  <div class="col-md-1">Born:</div><div class="col-md-11">{{born}}</div>
</div>
<div class="row">
  <div class="col-md-1">Appearances:</div>
  {{#each movie in appearances}}
	<div class="col-md-11">
	  {{#link-to "movie" movie}}{{movie.name}}{{/link-to}}
	</div>
  {{/each}}
</div>
{{outlet}}